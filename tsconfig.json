{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "types": ["webpack-env"],
      "paths": {
          "@/*": ["src/*"],
          "@components/*": ["src/components/*"],
          "@pages/*": ["src/pages/*"],
          "@services/*": ["src/services/*"],
          "@stores/*": ["src/stores/*"]
      },
      "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
      "src/**/*.ts",
      "src/**/*.vue",
      "tests/**/*.ts",
      "tests/**/*.vue"
  ],
  "exclude": ["node_modules"],
  "files": ["src/shims-vue.d.ts"]
}